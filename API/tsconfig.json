{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["@playwright/test", "node"],
    "resolveJsonModule": true
  },
  "include": ["src", "tests", "playwright.config.ts"],
  "exclude": ["node_modules", "dist"]
}
